<Container>:
    orientation: "vertical"
    padding: 50
    spacing: 50

    text_input: text_input # variable for text input 
    label_widget: label_widget # variable for adressing label widget

    TextInput:
        id: text_input # name of text input widget
        font_size: 40
        multiline: False
        text:"enter here"

    Label:
        id: label_widget # name of label widget
        text: "This text will be overwritten !"
        font_size: 40

    #FloatLayout:  # not required
    Button:
        #pos_hint: {'center_x':0.5,"y": 0.1}
        text: "Push here"
        font_size: 40
        on_release:
            root.change_label_text() # callback function to change text in label widget


    
  